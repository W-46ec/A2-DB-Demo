<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Tokimon - Home</title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/home.css">
</head>
<body>
  <div class="nav-bar">
    <div class="nav-bar-align">
      <ul>
        <li class="nav-home">
          <a class="nav-font" href="/home">Home</a>
        </li>
        <li class="nav-add">
          <a class="nav-font" href="/new">Add</a>
        </li>
      </ul>
    </div>
  </div>
  <div class="column">
    <div class="table-container">
      <table id="table">
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Weight</th>
          <th>Height</th>
          <th>Fly</th>
          <th>Fight</th>
          <th>Fire</th>
          <th>Water</th>
          <th>Electric</th>
          <th>Frozen</th>
          <th>Trainer</th>
          <th></th>
        </tr>
        <% rows.forEach((e, idx) => { %>
          <tr>
            <td><%= idx + 1 %></td>
            <td><a class="operations" title="Details" href=""><%= e.name %></a></td>
            <td><%= e.weight %></td>
            <td><%= e.height %></td>
            <td><%= e.fly %></td>
            <td><%= e.fight %></td>
            <td><%= e.fire %></td>
            <td><%= e.water %></td>
            <td><%= e.electric %></td>
            <td><%= e.frozen %></td>
            <td><%= e.trainer %></td>
            <td>
              <div>
                <a class="operations" title="Edit" href="/edit?id=<%= e.uid %>">Edit</a>
                <a class="operations" title="Remove" href="/remove?id=<%= e.uid %>" onclick="return confirm('Are you sure you want to delete?')">Remove</a>
              </div>
            </td>
          </tr>
        <% }) %>
      </table>
    </div>
  </div>
</body>
</html>